<?xml version="1.0" encoding="UTF-8"?>
<odoo> 
	<data>
		<record id="view_employee_form_inherit" model="ir.ui.view">
			<field name="name">Payslip form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="om_hr_payroll.view_hr_payslip_form"/>
			<field name="arch" type="xml">
				<data> 
					<field name="credit_note" position="after"> 
						<field name="type_bulletin" widget="radio"/> 
						<field name="nbr_jr_panier"/>
						<field name="nbr_jr_transport"/>
					</field>
					<xpath expr="//notebook" position="inside">
						<page string="STC" attrs="{'invisible' : [('type_bulletin','=','normal')]}">
							<group>
								<field name="conge_restant" class="oe_inline" attrs="{'readonly' : [('state','!=','draft')]}"/>
								<field name='indem_licen' class="oe_inline" attrs="{'readonly' : [('state','!=','draft')]}"/>
							</group>
							<separator/>
							<group>
								<field name='motif' attrs="{'readonly' : [('state','!=','draft')]}"/>
							</group>
						</page>
					</xpath>
					<xpath expr="//field[@name='employee_id']" position='attributes'>
						<attribute name="domain">[('non_actif','=',False)]</attribute>
					</xpath>
					<xpath expr="//field[@name='input_line_ids']" position="after">
						<separator string="Heure SupplÃ©mentaires"/>
							<field name="hsup_line_ids" nolabel="1">
								<tree editable="bottom">
									<field name="name"/>
									<field name="code"  required="1"/>
									<field name="qty"/>
									<field name="pourcentage"/>
									<field name="contract_id"  required="1"/>
								</tree>
							</field>
					</xpath>
					<xpath expr="//field[@name='input_line_ids']/tree/field[@name='amount']" position="after">
						<field name="type_p"/>
						<field name="list_id_prets" invisible="1"/>
						<field name="prime_id" invisible="1"/>
					</xpath>
                    <xpath expr="//field[@name='input_line_ids']" position="after">
                        <group>
                            <field name="abs_justifies" invisible="1"/>
                            <field name="iep_eff" invisible='1'/>
                            <field name="nb_leaves" invisible='1'/>
                            <field name="calcul_reel" invisible='1'/>
                            <field name="avoir_payslip" invisible='1'/>
                            <field name="have_credit_note" invisible='1'/>
                        </group>
                    </xpath>
				</data>
			</field>
		</record>
	</data>
</odoo>