<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="rappel_view_tree" model="ir.ui.view">
			<field name="name">rappel.view.tree</field>
			<field name="model">hr.rappel</field>
			<field name="arch" type="xml">
				<tree string='Rappel' editable="bottom">
					<field name="rappel_type_id" required="1"/>
					<field name="employee_id" required="1" domain="[('non_actif', '=', False)]"/>
					<field name="taux_montant" required="1"/>
					<field name="date" required="1"/>
				</tree>
			</field>
		</record>

		

		<record id="action_rappel" model="ir.actions.act_window">
			<field name="name">Rappels</field>
			<field name="res_model">hr.rappel</field>
			<field name="view_mode">tree</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		
		<menuitem 
			name="Rappels"
			id="menu_hr_rappel"
			parent="om_hr_payroll.menu_hr_payroll_root"
			groups="hr.group_hr_user"
			action="action_rappel"
			/>

	</data>
</odoo>