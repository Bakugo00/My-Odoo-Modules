<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_payroll_bareme_iep_tree" model="ir.ui.view">
			<field name="name">Barème Ancienneté</field>
			<field name="model">bareme.anciennete</field>
			<field name="arch" type="xml">
				<tree string="Barème IEP" editable="bottom">
					<field name="name" required="1"/>
					<field name="pourcentage" required="1"/>
					<field name="marge" required="1"/>
				</tree>
			</field>
		</record>

		<record id="action_payroll_bareme_iep" model="ir.actions.act_window">
			<field name="name">Barème Ancienneté</field>
			<field name="res_model">bareme.anciennete</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{'search_default_current':1}</field>
		</record>

		<menuitem 
			name="Barème IEP"
			id="menu_payroll_bareme_iep"
			parent="hr.menu_human_resources_configuration"
			action="action_payroll_bareme_iep"
			/>
	</data>
</odoo>