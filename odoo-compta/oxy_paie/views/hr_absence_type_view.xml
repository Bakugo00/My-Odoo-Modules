<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="absence_type_view_tree" model="ir.ui.view">
			<field name="name">Type d'absences</field>
			<field name="model">hr.absence.type</field>
			<field name="arch" type="xml">
				<tree string='Type Absence' editable="bottom">
					<field name="code" required="1"/>
					<field name="name" required="1"/>
				</tree>
			</field>

		</record>

		<record id="action_absence_type" model="ir.actions.act_window">
			<field name="name">Type d'absences</field>
			<field name="res_model">hr.absence.type</field>
			<field name="view_mode">tree</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<menuitem 
			name="Types"
			id="menu_types"
			parent="om_hr_payroll.menu_hr_payroll_configuration"
			groups="hr.group_hr_user"
			/>

		<menuitem 
			name="Type d'absences"
			id="menu_absence_type"
			parent="menu_types"
			groups="hr.group_hr_user"
			action="action_absence_type"
			/>
	</data>
</odoo>