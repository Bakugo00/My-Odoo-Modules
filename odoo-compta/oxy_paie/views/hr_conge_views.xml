<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_conge_tree" model="ir.ui.view">
		<field name="name">hr.conge.tree</field>
		<field name="model">hr.conge</field>
		<field name="arch" type="xml">
			<tree string="ICA" create="false" edit="false">
				<field name="employee_id"/>
				<field name="year"/>
				<field name="ica"/>
				<field name="ica_restant"/>
				<field name="nb_jour"/>
				<field name="nb_jour_restant"/>
			</tree>
			
		</field>
	</record>

	<record id="hr_conge_action" model="ir.actions.act_window">
		<field name="name">ICA</field>
		<field name="res_model">hr.conge</field>
		<field name="view_mode">tree</field>
	</record>
	
	<record id="hr_conge_search" model="ir.ui.view">
		<field name="name">hr.conge.search</field>
		<field name="model">hr.conge</field>
		<field name="arch" type="xml">
			<search string="ICA">
				<field name="employee_id" string="Employé"/>
				<group expand="0" string="Grouper par">
					<filter string="Employé" name="employee_id" context="{'group_by': 'employee_id'}" icon="terp-folder-orange"/>
					<filter string="Année" name="year" context="{'group_by': 'year'}"/>
				</group>
			</search>
		</field>
	</record>
	
	<menuitem id="hr_conge_menu" name="ICA" parent="om_hr_payroll.menu_hr_payroll_configuration" action="hr_conge_action"/>
</odoo>