<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="rapport_cnas_form" model="ir.ui.view">
            <field name="name">rapport.cnas.form</field>
            <field name="model">rapport.cnas</field>
            <field name="arch" type="xml">
                <form string="Rapport CNAS">
                    <group>
                        <field name='type_cotisation' widget='radio' nolabel='1'/>
                        <group>
                            <div>
                                <label for='month' attrs="{'invisible' : [('type_cotisation','!=','monthly')]}" string='Mois : '/>
                                <label for='month' attrs="{'invisible' : [('type_cotisation','!=','periodically')]}" string='Mois dÃ» : '/>
                                <field name='month' nolabel='1' class='oe_inline'/>
                            </div>
                        </group>
                        <group>
                            <field name='month_to' attrs="{'invisible' : [('type_cotisation','!=','periodically')],'required' : [('type_cotisation','=','periodically')]}"/>
                            <field name='cotisation_label' attrs="{'invisible' : [('type_cotisation','!=','periodically')],'required' : [('type_cotisation','=','periodically')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" class="oe_inline" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Imprimer" type="object" class="oe_highlight"/>
                        ou
                        <button string="Annuler" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
		
        <record id="rapport_cnas_form_action" model="ir.actions.act_window">
            <field name="name">La caisse national des assurances</field>
            <field name="res_model">rapport.cnas</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rapport_cnas_form"/>
            <field name="target">new</field>
        </record>

        <menuitem 
            id="menu_rapport_cnas"
            parent="menu_reports"
            action="rapport_cnas_form_action"
            groups="hr.group_hr_user"
            />
	</data>
</odoo>