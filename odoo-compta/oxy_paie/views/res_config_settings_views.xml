<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.hr.payroll</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="om_hr_payroll.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='om_hr_payroll_account']" position="after">
				<h2>Paie</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-lg-6 col-12 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<label for="day_start" string="Période de calcul"/>
							<div class="content-group">
								<div class="mt16">
									<field name="day_start" class="oe_inline" help="Jour début de mois"/> - <field name="day_end" class="oe_inline" help="Jour fin de mois"/>
								</div>
							</div>
							<div class="text-muted">
								Laisser vide pour que le système prend le mois réel
							</div>
						</div>
					</div>
					<div class="col-lg-6 col-12 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<label for="taux_panier" class="o_light_label"/>
							<div class="content-group">
								<field name="taux_panier"/>
							</div>
							<label for="taux_transport" class="o_light_label"/>
							<div class="content-group">
								<field name="taux_transport"/>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>