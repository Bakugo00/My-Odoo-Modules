<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="primes_type_view_tree" model="ir.ui.view">
			<field name="name">Types prime</field>
			<field name="model">hr.primes.type</field>
			<field name="arch" type="xml">
				<tree string='Type Prime' editable="bottom">
					<field name="code" required="1"/>
					<field name="name" required="1"/>
					<field name="cotisable"/>
					<field name="imposable"/>
					<field name="irg"/>
					<field name="type" required="1"/>
				</tree>
			</field>

		</record>

		<record id="action_primes_type" model="ir.actions.act_window">
			<field name="name">Type primes</field>
			<field name="res_model">hr.primes.type</field>
			<field name="view_mode">tree</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>


		<menuitem 
			name="Type primes"
			id="menu_primes_type"
			parent="menu_types"
			groups="hr.group_hr_user"
			action="action_primes_type"
			/>
	</data>
</odoo>