<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_avance_tree" model="ir.ui.view">
        <field name="name">hr.avance.tree</field>
        <field name="model">hr.avance</field>
        <field name="arch" type="xml">
            <tree string="Avance" editable="bottom">
            	<field name="employee_id" domain="[('non_actif','=',False)]" required="1"/>
            	<field name="decription"/>
            	<field name="date" required="1"/>
            	<field name="amount"/>
            	<field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hr_avance_action" model="ir.actions.act_window">
        <field name="name">Avance sur salaire</field>
        <field name="res_model">hr.avance</field>
        <field name="view_mode">tree</field>
    </record>
    
    <menuitem id="hr_avance_menu" parent="om_hr_payroll.menu_hr_payroll_root" action="hr_avance_action" groups="hr.group_hr_user"/>
</odoo>