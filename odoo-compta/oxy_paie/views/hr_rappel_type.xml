<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="rappel_types_view_tree" model="ir.ui.view">
			<field name="name">Types rappel</field>
			<field name="model">hr.rappel.type</field>
			<field name="arch" type="xml">
				<tree string='Type Rappel' editable="bottom">
					<field name="code" required="1"/>
					<field name="name" required="1"/>
					<field name="cotisable"/>
					<field name="imposable"/>
					<field name="irg"/>
					<field name="type" required="1"/>
				</tree>
			</field>
		</record>

		<record id="action_rappel_types" model="ir.actions.act_window">
			<field name="name">Type rappels</field>
			<field name="res_model">hr.rappel.type</field>
			<field name="view_mode">tree</field>
		</record>

		<menuitem 
			name="Type rappels"
			id="menu_rappel_type"
			parent="menu_types"
			groups="hr.group_hr_user"
			action="action_rappel_types"
			/>
	</data>
</odoo>