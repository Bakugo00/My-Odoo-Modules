<?xml version="1.0" encoding="UTF-8"?>
<odoo> 
	<data>
		<record id="view_employee_form_inherit1" model="ir.ui.view">
			<field name="name">Employee form</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<data> 
					<xpath expr="//h1//field[@name='name']/.." position="after"> 
						<h1><field name="prenom"  placeholder="Prénom"/></h1>
					</xpath>
					<xpath expr="//field[@name='country_id']" position="after"> 
						<field name="matricule_cnas"/> 
						<field name="matricule"/> 
					</xpath>
					<xpath expr="//field[@name='bank_account_id']" position='attributes'>
						<attribute name="invisible">1</attribute>
					</xpath>
					
					<group name="identification_group" position="after">
						<group string="Information RH">
							<field name="hors_societe"/>
							<field name="date_entree"/>
						</group>

						<group string="Départ">
							<field name="non_actif"/>
							<field name="date_sortie" attrs="{'invisible':[('non_actif', '=', False)],'required':[('non_actif', '=', True)]}"/>
							<field name="motif" attrs="{'invisible':[('non_actif', '=', False)]}"/>
						</group>
					</group>
					<div name="div_km_home_work" position="after">
						<field name="type_paiement"/>
						<field name="compte" attrs="{'invisible' : [('type_paiement','!=','virement')]}"/>
					</div>
				</data>
			</field>
		</record>

		<record id="action_inactive_employee" model="ir.actions.act_window">
			<field name="name">Employés inactifs</field>
			<field name="res_model">hr.employee</field>
			<field name="view_mode">kanban,tree,form,activity</field>
			<field name="domain">[('non_actif', '=', True)]</field>
			<field name="context">{}</field>
		</record>

		<menuitem 
			name="Employés inactifs"
			id="menu_inactive_employee"
			parent="hr.menu_hr_employee_payroll"
			groups="hr.group_hr_user"
			sequence = "3"
			action="action_inactive_employee"
			/>

		<record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
			<field name="domain">[('non_actif', '=', False)]</field>
			
		</record>
		
		
	</data>
</odoo>