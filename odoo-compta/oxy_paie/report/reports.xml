<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <report
        id="bis_report_xlsx"
        model="hr.payslip.line"
        string="301 Bis"
        report_type="xlsx"
        name="oxy_paie.bis_xlsx"
        file="oxy_paie.bis_xlsx"
        menu='False'/>

    <report
        id="report_journal_id"
        model="hr.payslip.line"
        string="Journal de paie"
        report_type="qweb-pdf"
        name="oxy_paie.journal_paie"
        file="oxy_paie.journal_paie"
        menu='True'/>

    <record id="paperformat_dz" model="report.paperformat">
        <field name="name">A4 (DZ)</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">22</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(6, 0, [ref('oxy_paie.report_journal_id'),])]"/>
    </record>

    <report
        id="report_cnas_id"
        model="hr.payslip.line"
        report_type="qweb-pdf"
        name="oxy_paie.report_cnas"
        file="oxy_paie.report_cnas"
        string="Registre CNAS" />

    <report 
        string="Centralisateur" 
        id="payroll_centralizer_report" 
        model="hr.payslip" 
        report_type="qweb-pdf"
        name="oxy_paie.payroll_centralizer_template_id" 
        file="oxy_paie.payroll_centralizer_template_id"
        menu="False"
        />

   <record id="paperformat_template_cnas" model="report.paperformat">
        <field name="name">Template declaration CNAS</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="report_ids" eval="[(6, 0, [ref('oxy_paie.report_cnas_id'),])]"/>
    </record>

    <delete id="om_hr_payroll.payslip_details_report" model="ir.actions.report"/>
    <delete id="om_hr_payroll.action_report_payslip" model="ir.actions.report"/>

</odoo>