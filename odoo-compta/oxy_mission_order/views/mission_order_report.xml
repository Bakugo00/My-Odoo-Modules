<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="paperformat_paie_dz" model="report.paperformat">
			<field name="name">mission order</field>
			<field name="default" eval="True"/>
			<field name="format">A4</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">5</field>
			<field name="margin_bottom">2</field>
			<field name="margin_left">3</field>
			<field name="margin_right">3</field>
		</record>

		<report
			id="_id_ordre_mission" 
			string="Ordre de mission"
			model="hr.mission.order"   
			report_type="qweb-pdf"
			name="oxy_mission_order.ordre_mission"
			paperformat="oxy_mission_order.paperformat_paie_dz"
		/> 

		<template id="ordre_mission">
			<t t-call='web.html_container'>
				<t t-foreach="docs" t-as="doc">
					<t t-call="web.basic_layout">
						<div class="page" style="font-family:Calibri;">
							<div width="100%" style="padding-bottom:100px;">
								<table width="100%">
									<tr width="100%">
										<td width="65%" style="padding-bottom:30px;">
											<b><span t-field="doc.company_id.name" style="font-family:Arial;font-size:28px"/></b>
											<br/><br/>
											<span t-field="doc.company_id.street" style="font-family:Arial;font-size:18px"/>
											<span t-field="doc.company_id.street2" style="font-family:Arial;font-size:18px"/>
											<span t-field="doc.company_id.city" style="font-family:Arial;font-size:18px"/>
											<br/><br/>
											
										</td>
										<td width="35%">
											<img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' % doc.company_id.logo" style="max-height: 180px;max-weight: 180px;align:right;padding-left:320px;"/>
										</td>
									</tr>
								</table>
							</div>
							<div align="right" style="padding-bottom:80px;font-family:Arial;font-size:23px;padding-right:50px;">
								<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>  
							</div>
							<div align="center" style="padding-bottom:90px;">
								<span style="font-family:Arial;font-size:30px;align:center;color:#c90b04;">
									<b><u>Ordre De Mission:</u></b>
								</span>
							</div>
							<table style="height:40px;padding-top:10px;" width="100%">
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Nom:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px;"  width="55%">
										<span t-field="doc.employe_id.name"/>
									</td>
								</tr>
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Prénom:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px;"  width="55%">
										<span t-field="doc.employe_id.prenom"/>
									</td>
								</tr>
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Fonction:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px;"  width="55%">
										<span t-field="doc.employe_id.job_id"/>
									</td>
								</tr>
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Destination:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px;"  width="55%">
										<span t-field="doc.adresse"/>
										<span t-field="doc.state_id"/>
										<span t-field="doc.country_id"/>
									</td>
								</tr>
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Date départ:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px;"  width="55%">
										<span t-field="doc.start_date"/>
									</td>
								</tr>
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Date retour:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px;"  width="55%">
										<span t-field="doc.end_date"/>
									</td>
								</tr>
								<tr>
									<td style="font-family:Arial;font-size:25px;padding-left:80px;" width="45%">
										<b>
											<span>Objet de la mission:
											</span>
											
										</b>
									</td>
									<td style="font-family:Arial;font-size:25px"  width="55%">
										<span t-field="doc.mission_id.name"/>
									</td>
								</tr>
							</table>
						</div>

					</t>
				</t>
			</t>
		</template>
	</data>
</odoo>