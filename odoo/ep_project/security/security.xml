<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.rule" id="project.project_public_members_rule">
            <field name="name">Project Access Rule</field>
            <field name="model_id" ref="model_project_project"/>
            <field name="domain_force">['&amp;',('access_employees_ids', 'in', [user.id]), '|', ('privacy_visibility', '!=', 'followers'), ('message_partner_ids', 'in', [user.partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <!--Group : timesheets : manager n+1-->
        <record id="no_one" model="res.groups">
            <field name="name">no one</field>
        </record>
        <record id="group_account_analytic_line_manager_n" model="res.groups">
            <field name="name">Manager N+1</field>
            <field name="category_id" ref="base.module_category_services_timesheets"/>
            <field name="implied_ids" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>
        <!--Group all timesheets inherit manager n+1 group-->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', 'in', ['hr_timesheet']), ('name', 'in', ['group_hr_timesheet_approver'])]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>
        <record id="hr_timesheet.group_hr_timesheet_approver" model="res.groups">
            <field name="implied_ids" eval="[(6,0, [ref('group_account_analytic_line_manager_n')])]"/>
        </record>
        <!--rule : timesheets : manager n+1-->
        <record id="account_analytic_line_manager_n_rule" model="ir.rule">
            <field name="name">Visibilité des feuilles de temps du manager et de ses subordonés</field>
            <field ref="hr_timesheet.model_account_analytic_line" name="model_id"/>
            <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.parent_id', 'in', user.employee_ids.ids),('project_id', '!=', False),('employee_id','!=',False)]</field>
            <field name="groups" eval="[(4, ref('group_account_analytic_line_manager_n'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
    </data>
</odoo>