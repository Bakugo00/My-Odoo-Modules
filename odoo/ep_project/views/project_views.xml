<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_task_form2_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="code" class="oe_inline" />
                <span class="oe_inline"> - </span>
            </field>
            <field name="milestone_id" position="after">
                <field name="responsable" widget="many2one_avatar_user" />
            </field>

            <xpath expr="//page[@name='description_page']" position="after">
                <page name="description_technique_page" string="Description Technique">
                    <field name="description_technique" type="html"
                        placeholder="Description Technique de la tache..." />
                </page>
                <page name="description_tests_page" string="Description Tests">
                    <field name="description_tests" type="html"
                        placeholder="Description des tests..." />
                </page>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <!-- calculated deadline -->
                <field name="date_deadline_calculated" />
                <field name="planned_date" />
                <field name="show_icon" invisible="1" />
                <!-- user story field -->
                <label for="user_story" />
                <div>
                    <field name="user_story" class="oe_inline" widget="boolean_toggle" />
                    <span title="No Sub-tasks" class="fa fa-times-circle text-danger"
                        aria-hidden="true"
                        attrs="{'invisible': [ ('show_icon', '=', 'has_subtasks')]}" />
                    <span title="Has Sub-tasks" class="fa fa-check-circle text-success"
                        aria-hidden="true"
                        attrs="{'invisible': [ ('show_icon', '!=', 'has_subtasks')]}" />
                </div>
                <field name="predecessor_task_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_tasks">
                    <field string="Taches" name="tasks_count" widget="statinfo" />
                </button>
            </div>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="access_employees_ids" string="Asssigés à" widget='many2many_tags' />
            </xpath>

        </field>
    </record>

    <record id="view_project_task_tree_inherit" model="ir.ui.view">
        <field name="name">project.task.tree.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="code" string="Code" />
            </xpath>
            <xpath expr="//tree/field[@name='user_ids']" position="after">
                <field name="date_deadline" />
                <field name="date_deadline_calculated" />
                <field name="subtask_count" />
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">date_deadline asc, date_deadline_calculated asc</attribute>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="attributes">
                <attribute name="widget">date</attribute>
                <attribute name="options">{'format': 'mm/dd/yyyy'}</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_project_task_kanban_inherit" model="ir.ui.view">
        <field name="name">project.task.kanban.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//strong[@class='o_kanban_record_title']" position="replace">
                <strong class="o_kanban_record_title">
                    <field name="code" widget="name_with_subtask_count" />
                    <s t-if="!record.active.raw_value">
                        <field name="name" widget="name_with_subtask_count" />
                    </s>
                    <t t-else="">
                        <field name="name" widget="name_with_subtask_count" />
                    </t>
                </strong>
            </xpath>
            <xpath expr="//kanban/progressbar" position="replace">
                <progressbar field="kanban_state"
                    colors='{"done": "success", "blocked": "dark", "normal": "200", "hold":"warning", "failed": "danger"}' />
            </xpath>
            <xpath expr="//div[@class='oe_kanban_bottom_right']//field[@name='kanban_state']"
                position="attributes">
                <attribute name="widget">state_selection_custom</attribute>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="replace">
                <field name="date_deadline" widget="date" options="{'format': 'mm/dd/yyyy'}"/>
            </xpath>
        </field>
    </record>
    <!-- user story filter -->
    <record id="view_project_task_search_inherit" model="ir.ui.view">
        <field name="name">project.task.search.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='unassigned']" position="after">
                <filter string="User Story" name="user_story" domain="[('user_story', '=', True)]" />
            </xpath>
        </field>
    </record>


    <record id="quick_create_task_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.quick_create.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.quick_create_task_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="milestone_id" />
                <field name="date_deadline" />
            </xpath>
            <xpath expr="//field[@name='description']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="after">
                <field name="planned_hours"/>
                <field name="predecessor_task_id"/>
            </xpath>
        </field>
    </record>
    <!-- user story based icon -->
    <record id="view_task_kanban_inherit" model="ir.ui.view">
        <field name="name">project.task.kanban.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'oe_kanban_bottom_right')]" position="inside">
                <field name="show_icon" invisible="1" />
                <t t-if="record.show_icon.raw_value != 'has_subtasks'">
                    <span title="No Sub-tasks" class="fa fa-times-circle text-danger"
                        aria-hidden="true" />
                </t>
                <t t-elif="record.show_icon.raw_value == 'has_subtasks'">
                    <span title="Has Sub-tasks" class="fa fa-check-circle text-success"
                        aria-hidden="true" />
                </t>
            </xpath>
            <xpath expr="//kanban" position="attributes">
                <attribute name="default_order">date_deadline asc, date_deadline_calculated asc</attribute>
            </xpath>
        </field>
    </record>
</odoo>