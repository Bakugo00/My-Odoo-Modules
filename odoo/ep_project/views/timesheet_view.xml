<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_task_form2_inherit_inherit" model="ir.ui.view">
        <field name="name">project.task.form2.inherit.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='timesheets_tab']//field[@name='timesheet_ids']/tree/field[@name='date']" position="after">
                <field name="type"/>
            </xpath>
            <xpath expr="//page[@id='timesheets_tab']//field[@name='timesheet_ids']/tree/field[@name='name']" position="after">
                <field name="successful_test" attrs="{'invisible': [('type', '!=', 'testing')]}"/>        
            </xpath>

            <xpath expr="//page[@id='timesheets_tab']/group/group//div[@class='o_row']" position="replace">
                <div class="o_row">
                    <field name="planned_hours" class="o_field_float_time oe_inline ms-2" widget="timesheet_uom_no_toggle"/>
                </div>
                <label for="test_planned_hours" string="Heurs de test allouées" attrs="{'invisible': [('encode_uom_in_days', '=', True)]}"/>
                <label for="test_planned_hours" string="Jours de test alloués" attrs="{'invisible': [('encode_uom_in_days', '=', False)]}"/>
                <div class="o_row">
                    <field name="test_planned_hours" class="o_field_float_time oe_inline ms-2" widget="timesheet_uom_no_toggle"/>
                    <span attrs="{'invisible': ['|', ('allow_subtasks', '=', False), ('subtask_count', '=', 0)]}">
                        (incl. <field name="subtask_planned_hours" nolabel="1" groups="project.group_subtask_project" widget="timesheet_uom_no_toggle" class="oe_inline"/> on
                        <span class="fw-bold text-dark"> Sub-tasks</span>)
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>