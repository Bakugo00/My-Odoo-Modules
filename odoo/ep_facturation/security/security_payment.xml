<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="account_payment_parent_category">
            <field name="name">Paiments</field>
            <field name="description">Payment parent Application</field>
        </record>
        <record model="ir.module.category" id="account_payment_category">
            <field name="name">Paiments</field>
            <field name="description">Payment Application</field>
            <field name="parent_id" ref="account_payment_parent_category"/>
        </record>
<!-- Groups Payments -->
<!--Collaborateur Group-->
        <record id="group_account_payment_collaborateur" model="res.groups">
            <field name="name">Collaborateur</field>
            <field name="category_id" ref="account_payment_category"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>

        </record>
<!--Manager N+1 group-->
        <record id="group_account_payment_n" model="res.groups">
            <field name="name">Manager N+1</field>
            <field name="category_id" ref="account_payment_category"/>
            <field name="implied_ids" eval="[(4, ref('group_account_payment_collaborateur')),(4, ref('group_account_move_n'))]"/>
        </record>
<!--Manager RH group-->
        <record id="group_account_payment_manager_rh" model="res.groups">
            <field name="name">Manager RH</field>
            <field name="category_id" ref="account_payment_category"/>
            <field name="implied_ids" eval="[(4, ref('group_account_payment_n')),(4, ref('group_account_move_manager_rh'))]"/>
        </record>

<!--Manager IT/Direction Group-->
        <record id="group_account_payment_manager_it" model="res.groups">
            <field name="name">Manager IT/Direction</field>
            <field name="category_id" ref="account_payment_category"/>
            <field name="implied_ids" eval="[(4, ref('group_account_payment_manager_rh')),(4, ref('group_account_move_manager_it'))]"/>
        </record>

<!--Rules-->
<!--Only department access to account-->
        <record id="account_payment_rule_manager_n" model="ir.rule">
            <field name="name">account.payment.rule.manager.n</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="domain_force">['|',('partner_id.portfolio_ids.owner_id.employee_ids.parent_id','child_of',user.employee_ids.ids),('partner_id.portfolio_ids.user_ids.employee_ids.parent_id','child_of',user.employee_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_account_payment_manager_rh')),(4,ref('group_account_payment_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
<!--Only acces to users invoices -->
        <record id="account_payment_rule_collaborateur" model="ir.rule">
            <field name="name">account.payment.rule.collaborateur</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="domain_force">['|',('partner_id.portfolio_ids.owner_id.id','in',[user.id]),('partner_id.portfolio_ids.user_ids.id','in',[user.id])]</field>
            <field name="groups" eval="[(4, ref('group_account_payment_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
<!--Access to all invoices rule-->
        <record id="account_payment_rule_manager_it" model="ir.rule">
            <field name="name">account.payment.rule.manager.it</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_account_payment_manager_it'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>