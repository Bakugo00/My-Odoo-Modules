<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_payment_inherit" model="ir.ui.view">
            <field name="name">account.payment.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <!-- <field name="payment_method" attrs="{'readonly': [ ('state', 'not in', ('draft')) ]}"/>
                     <field name="bank_check_number"
                           attrs="{'invisible': [('payment_method', '!=', 'cheque')],
                            'required': [('payment_method', '=', 'cheque')]}"
                    /> -->
                    <field name="old_id" invisible="1"/>
                    <field name="team_id"  attrs="{'readonly': [ ('state', 'not in', ('draft')) ]}"
                           options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"
                        />
                </xpath>

            </field>
        </record>
        <record id="account_payment_tree_inherit" model="ir.ui.view">
            <field name="name">account.payment.tree.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_method_line_id']" position="replace">
                    <field name="ref"/>
                    <!-- <field name="payment_method"/> -->
                </xpath>

            </field>
        </record>

    </data>
</odoo>
