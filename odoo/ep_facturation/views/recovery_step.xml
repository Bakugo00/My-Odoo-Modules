<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="recovery_step_form" model="ir.ui.view">
            <field name="name">recovery.step.form</field>
            <field name="model">recovery.step</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="recovery_step_list" model="ir.ui.view">
            <field name="name">Etapes de Recouvrement</field>
            <field name="model">recovery.step</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="recovery_step_action" model="ir.actions.act_window">
            <field name="name">Etapes de Recouvrement</field>
            <field name="res_model">recovery.step</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_recovery_step"
                action="recovery_step_action"
                parent="account.menu_finance_configuration"
                sequence="0"
        />

    </data>
</odoo>