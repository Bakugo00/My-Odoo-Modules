<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header/button[@name='action_post'][1]" position="attributes">
                    <attribute name="confirm">Êtes-vous sûr de confirmer la facture ?</attribute>
                </xpath>

                <xpath expr="//header/button[@name='action_post'][2]" position="attributes">
                    <attribute name="confirm">Êtes-vous sûr de confirmer la facture ?</attribute>
                </xpath>

                <label for="invoice_payment_term_id" position="attributes">
                    <attribute name="string">Conditions de paiement</attribute>
                </label>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <!--                    <field name="invoice_payment_term_id"> </field>-->
                    <field name="contact_id" domain="[('parent_id', '=', partner_id),('company_type', '=', 'person')]"
                           options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"/>
                    <!--                    <field name="payment_method" attrs="{'readonly': [('state', '=', 'posted')]}"/>-->
                    <field name="recovery_step_id"
                           attrs="{'readonly': [('state', '=', 'posted')]}"
                           options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
<!--                    <attribute name="domain">[('company_type', '=', 'company')]</attribute>-->
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True ,
                        'no_open': True}
                    </attribute>
                    <attribute name="context">
                        {'show_portoflio_contacts':True}
                    </attribute>
                </xpath>

                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">ep_facturation.group_account_user_sup</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="replace">
                    <field name="amount_untaxed" string="Montant HT" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_tax" string="Montant TVA" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                        <label for="amount_total" />
                    </div>
                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </xpath>

                <!-- <xpath expr="//field[@name='tax_totals']" position="before">
                    <field name="payment_type" invisible="1"/>
                    <field name="timbre" widget='monetary' options="{'currency_field': 'currency_id'}"
                           attrs="{'invisible': [('payment_type', '!=', 'cash')]}"/>
                </xpath> -->
                <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="context">{'example_date': invoice_date, 'example_amount': amount_total}</attribute>
                
                    <!-- <field name="invoice_payment_term_id"
                                           context="{'example_date': invoice_date, 'example_amount': tax_totals['amount_total']}"
                                           placeholder="Terms"/> -->
                </xpath>


                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                    <attribute name="string">TVA</attribute>
                </xpath>

                <xpath expr="//notebook/page[@name='other_info']/group/group[@name='sale_info_group']"
                       position="before">
                    <group name="customer" string="Client" groups="ep_vente.group_update_customer">
                        <field name="customer_name"/>
                        <field name="customer_address"/>
                    </group>
                </xpath>
<!-- 
                <xpath expr="//field[@name='discount']" position="attributes">
                    <attribute name="digits">[16, 2]</attribute>
                </xpath> -->


                <!-- <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True ,
                        'no_open':True}
                    </attribute>
                </xpath> -->

                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True ,
                        'no_open':True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']"
                       position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_user_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_incoterm_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

                <xpath expr="//page[@name='other_info']/group/group/field[@name='partner_bank_id']"
                       position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_id']" position="replace">
                    <field name="product_id"
                        optional="show"
                        widget="many2one_barcode"
                        domain="
                            context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')
                            and [('product_tmpl_id.state','=','confirmed'),('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]
                            or [('product_tmpl_id.state','=','confirmed'),('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                    />
                </xpath>
            </field>
        </record>

