<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="account_move_search_inherit" model="ir.ui.view">
            <field name="name">account.move.search.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='to_check']" position="after">

                    <separator/>
                    <filter string="Aujourd'hui" name="today"
                            domain="[('invoice_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                                    ('invoice_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>

                    <filter string="Cette semaine" name="current_week"
                            domain="['&amp;',('invoice_date', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                            ('invoice_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d'))]"/>

                    <filter string="Ce mois" name="current_month"
                            domain="[('invoice_date','&lt;=',(datetime.date.today()+relativedelta(day=31)).strftime('%Y-%m-%d')),('invoice_date','&gt;=',(datetime.date.today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>

                    <filter string="Cette annÃ©e" name="current_year"
                            domain="[('invoice_date','&lt;=', context_today().strftime('%%Y-12-31')),
                            ('invoice_date','&gt;=',context_today().strftime('%%Y-01-01'))]"/>

                    <separator/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>