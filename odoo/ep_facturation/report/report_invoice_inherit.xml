                        <div class="row mt32 mb32" id="informations">

                            <div t-if="o.partner_id.name"
                                 class="col-auto col-3 mw-100 mb-2">
                                <strong>Client :</strong>
                                <t t-if="o.customer_name">
                                    <span t-field="o.customer_name"/>
                                </t>
                                <t t-else="">
                                    <span t-field="o.partner_id.name"/>
                                </t>
                            </div>

                            <div t-if="o.invoice_date" class="col-auto col-3 mw-100 mb-2">
                                <strong>Date de facture :</strong>
                                <span t-field="o.invoice_date" t-options='{"widget": "date"}'/>
                            </div>
                        </div>


                        <table class="table table-sm o_main_table">
                            <tbody>
                                <!--                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' ">-->
                                <tr>
                                    <td style="width:15%;">Adresse</td>
                                    <td style="width:35%;">
                                        <t t-if="o.customer_address">
                                            <span t-field="o.customer_address"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.partner_id.street"/>
                                            ,
                                            <span t-field="o.partner_id.city"/>
                                            ,
                                            <span t-field="o.partner_id.country_id.name"/>
                                        </t>
                                    </td>

                                    <td style="width:15%;">N°ID Fiscale</td>
