<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- inherited template of report invoice -->
        <template id="report_invoice_inherit_add_stamp" inherit_id="ep_facturation.report_invoice_inherit">
            <xpath expr="//div[@id='total']/div//table/tr[contains(@class,'o_total')] " position="before">
                <t t-if="o.amount_timbre != 0">
                    <tr style="">
                        <td>
                            <strong>Montant Timbre</strong>
                        </td>
                        <td class="text-end">
                            <span t-field="o.amount_timbre"/>
                        </td>
                    </tr>
                </t>
            </xpath>

        </template>


    </data>

</openerp>