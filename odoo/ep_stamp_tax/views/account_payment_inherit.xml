<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_payment__form_inherit" model="ir.ui.view">
            <field name="name">account.payment.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="payment_method" readonly="1" />
                    <field name="bank_check_number"
                           attrs="{'invisible': [('payment_method', '!=', 'cheque')],
                            'required': [('payment_method', '=', 'cheque')]}" readonly="1"
                    />
                </xpath>

            </field>
        </record>

    </data>
</odoo>
