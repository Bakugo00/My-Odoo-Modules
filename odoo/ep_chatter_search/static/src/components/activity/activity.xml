<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="ep_chatter_search.Activity.inherit" t-inherit="mail.Activity" owl="1" t-inherit-mode="extension">

        <xpath expr="//div[@name='tools']" position="attributes">
            <attribute name="t-att-class">{
                'bg-color-activity-red': activityView.activity.state === 'overdue',
                'bg-color-activity-green ': activityView.activity.state === 'planned',
                'bg-color-activity-orange': activityView.activity.state === 'today',
            }</attribute>
        </xpath>

    </t>


</templates>