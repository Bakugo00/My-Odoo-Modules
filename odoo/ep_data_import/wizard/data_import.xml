<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="data_import_wizard" model="ir.ui.view">
            <field name="name">data.import.wizard</field>
            <field name="model">data.import</field>
            <field name="arch" type="xml">
                <form>
                    <group>

                        <group>
                            <field name="invoice_store_fname" invisible="1"/>
                            <field name="invoice_attachment" filename="store_fname"/>
                            <button name="invoice_import" string="Importer Facture" type="object" class="oe_highlight"/>
                        </group>

                        <group>
                            <field name="invoice_line_store_fname" invisible="1"/>
                            <field name="invoice_line_attachment" filename="store_fname"/>
                            <button name="invoice_line_import" string="Importer Lignes de Facture" type="object"
                                    class="oe_highlight"/>
                        </group>

                         <group>
                            <field name="refund_store_fname" invisible="1"/>
                            <field name="refund_attachment" filename="store_fname"/>
                            <button name="refund_import" string="Importer Lignes de Facture Avoir" type="object"
                                    class="oe_highlight"/>
                        </group>

                         <group>
                            <field name="refund_line_store_fname" invisible="1"/>
                            <field name="refund_line_attachment" filename="store_fname"/>
                            <button name="refund_line_import" string="Importer Lignes de Facture Avoir" type="object"
                                    class="oe_highlight"/>
                        </group>

                        <group>
                            <button name="update_invoices" string="Mettre à jours les factures" type="object"
                                    class="oe_highlight"/>
                        </group>

                         <group>
                            <button name="update_refunds" string="Mettre à jours les avoirs" type="object"
                                    class="oe_highlight"/>
                        </group>

                         <group>
                            <field name="payment_store_fname" invisible="1"/>
                            <field name="payment_attachment" filename="store_fname"/>
                            <button name="payment_import" string="Importer les paiements" type="object"
                                    class="oe_highlight"/>
                        </group>

                        <group>
                            <!--                            <button name="generate_attachment" string="Generer PJ" type="object" class="oe_highlight"/>-->
                        </group>
                    </group>
                    <!--                    <footer>-->

                    <!--                        <button string="Annuler" class="oe_link" special="cancel"/>-->
                    <!--                    </footer>-->
                </form>
            </field>
        </record>

        <record id="action_data_import_wizard" model="ir.actions.act_window">
            <field name="name">Importation des données</field>
            <field name="res_model">data.import</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="data_import_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Importation données" id="menu_data_import" action="action_data_import_wizard"
                  parent="base.next_id_9"/>


    </data>

</odoo>