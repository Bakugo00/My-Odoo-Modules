<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="sale_order_search_inherit" model="ir.ui.view">
            <field name="name">sale.order.search.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='sales']" position="after">

                    <separator/>

                    <filter string="Devis partagés" name="my_shared_quotations" domain="[('count_attendees', '!=', 1),('attendees_ids.user_id', '=', uid),('state','in',('draft', 'sent'))]"/>
                    <filter string="Bons de commandes partagés" name="my_shared_sales" domain="[('count_attendees', '!=', 1),('attendees_ids.user_id', '=', uid),('state','in',('sale','done'))]"/>

                    <separator/>

                    <filter string="Aujourd'hui" name="today"
                            domain="[('date_order','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                                    ('date_order','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>

                    <filter string="Cette semaine" name="current_week"
                            domain="['&amp;',('date_order', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                            ('date_order', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d'))]"/>

                    <filter string="Ce mois" name="current_month"
                            domain="[('date_order','&lt;=',(datetime.date.today()+relativedelta(day=31)).strftime('%Y-%m-%d')),('date_order','&gt;=',(datetime.date.today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>

                    <filter string="Cette année" name="current_year"
                            domain="[('date_order','&lt;=', context_today().strftime('%%Y-12-31')),
                            ('date_order','&gt;=',context_today().strftime('%%Y-01-01'))]"/>

                    <separator/>
                </xpath>

            </field>
        </record>

