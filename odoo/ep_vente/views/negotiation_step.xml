<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="negotiation_step_form" model="ir.ui.view">
            <field name="name">negotiation.step.form</field>
            <field name="model">negotiation.step</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="negotiation_step_list" model="ir.ui.view">
            <field name="name">Etapes de Négociation</field>
            <field name="model">negotiation.step</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="negotiation_step_action" model="ir.actions.act_window">
            <field name="name">Etapes de Négociation</field>
            <field name="res_model">negotiation.step</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_negotiation_step"
                action="negotiation_step_action"
                parent="sale.menu_sale_config"
                groups="sales_team.group_sale_salesman"
                sequence="3"
        />

    </data>
</odoo>