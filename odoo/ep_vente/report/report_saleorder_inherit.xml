<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- inherited template of quotation report -->
        <template id="report_inherite_saleorder" inherit_id="sale.report_saleorder_document">

            <xpath expr="//t[@t-call='web.external_layout']" position="replace">

                <t t-call="web.basic_layout">

                    <t t-call="ep_base.header_footer_for_invoice"/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>

                    <div class="page" style="font-size:14px">
                        <!--                        <div class="oe_structure"/>-->
                        <br/>
                        <h2 class="mt16">
                            <t>
                                <span>Devis N°</span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>

                        <div class="row mt32 mb32" id="informations">
                            <!--                            <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">-->
                            <!--                                <strong>Your Reference:</strong>-->
                            <!--                                <p class="m-0" t-field="doc.client_order_ref"/>-->
                            <!--                            </div>-->
                            <!--                            <div t-if="doc.date_order and doc.state not in ['draft','sent']"-->
                            <!--                                 class="col-auto col-3 mw-100 mb-2">-->
                            <!--                                <strong>Date :</strong>-->
                            <!--                                <p class="m-0" t-field="doc.date_order"/>-->
                            <!--                            </div>-->

                            <div t-if="doc.partner_id.name"
                                 class="col-auto col-3 mw-100 mb-2">
                                <strong>Client :</strong>
                                <t t-if="doc.customer_name">
                                    <span t-field="doc.customer_name"/>
                                    <!--                                    <p class="m-0" t-field="doc.customer_name"/>-->
                                </t>
                                <t t-else="">
                                    <span t-field="doc.partner_id.name"/>
                                    <!--                                    <p class="m-0" t-field="doc.partner_id.name"/>-->
                                </t>
                            </div>

                            <!--                            <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">-->
                            <!--                                <strong>Expiration:</strong>-->
                            <!--                                <p class="m-0" t-field="doc.validity_date"/>-->
                            <!--                            </div>-->
                            <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2">
                                <strong>Date de devis :</strong>
                                <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                                <!--                                <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>-->
                            </div>
                        </div>

                        <table class="table table-sm o_main_table">
                            <tbody>
                                <!--                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' ">-->
                                <tr>
                                    <td style="width:15%;">Adresse</td>
                                    <td style="width:35%;">
                                        <t t-if="doc.customer_address">
                                            <span t-field="doc.customer_address"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="doc.partner_id.street"/>
                                            ,
                                            <span t-field="doc.partner_id.city"/>
                                            ,
                                            <span t-field="doc.partner_id.country_id.name"/>
                                        </t>
                                    </td>

                                    <td style="width:15%;">N°ID Fiscale</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.partner_id.nif"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:15%;">Téléphone</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.partner_id.phone"/>
                                    </td>
                                    <td style="width:15%;">N° Article</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.partner_id.ai"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:15%;">Mail</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.partner_id.email"/>
                                    </td>
                                    <td style="width:15%;">N° RC</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.partner_id.rc"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:15%;">Contact</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.contact_id.name"/>
                                    </td>
                                    <td style="width:15%;">NIS</td>
                                    <td style="width:35%;">
                                        <span t-field="doc.partner_id.nis"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!--                        <br/>-->

                        <!-- Is there a discount on at least one line? -->

                        <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                        <table class="table table-sm o_main_table">
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <!--                                <tr>-->
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' ">

                                    <th name="th_description" class="text-left" style="width:50%;">Description</th>
                                    <th name="th_quantity" class="text-left" style="width:10%;">Qté</th>
                                    <th name="th_priceunit" class="text-left" style="width:10%;">Prix</th>
                                    <th name="th_discount" t-if="display_discount" class="text-left"
                                        groups="product.group_discount_per_so_line" style="width:10%;">
                                        <span>Remise %</span>
                                    </th>
                                    <th name="th_taxes" class="text-left" style="width:10%;">TVA</th>
                                    <th name="th_subtotal" class="text-right" style="width:10%;">
                                        <span groups="account.group_show_line_subtotals_tax_excluded">Sous-Total</span>
                                        <span groups="account.group_show_line_subtotals_tax_included">Sous-Total</span>
                                    </th>
                                </tr>
                            </thead>

                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="doc.order_line" t-as="line">

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td name="td_name" class="text-left">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td name="td_quantity" class="text-left">
                                                <span t-field="line.product_uom_qty"/>
                                                <!--                                                <span t-field="line.product_uom"/>-->
                                            </td>
                                            <td name="td_priceunit" class="text-left">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" class="text-left"
                                                groups="product.group_discount_per_so_line">
                                                <span t-field="line.discount"
                                                      t-options="{'widget': 'float', 'precision':2}"/>
                                            </td>
                                            <td name="td_taxes" class="text-left">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
<!--                                                <span t-esc="line.tax_id.amount"-->
<!--                                                      t-options="{'widget': 'float', 'precision':0}"/>%-->

                                            </td>
                                            <td name="td_subtotal" class="text-right o_price_total">
                                                <span t-field="line.price_subtotal"
                                                      groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total"
                                                      groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99" class="text-right">
                                                <strong class="mr16">Sous-total</strong>
                                                <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix" name="so_total_summary" >
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                    <table class="table table-sm table-borderless">

                                            <tr class="border-black o_subtotal" style="">
                                                <td>
                                                    <strong>Montant HT</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="doc.amount_untaxed"/>
                                                </td>
                                            </tr>

                                        <t>
                                            <tr class="border-black o_subtotal">
                                                <td>
                                                    <strong>Taxes</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="doc.amount_tax"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <!-- <tr t-if="doc.payment_method == 'espece' ">
                                            <td name="td_amount_stamp_label">
                                                <strong>Montant Timbre</strong>
                                            </td>
                                            <td name="td_amount_stamp" class="text-end">
                                                <span t-field="doc.amount_stamp"/>
                                            </td>
                                        </tr> -->

                                        <tr class="border-black o_total">
                                            <td name="td_amount_total_label">
                                                <strong>Total</strong>
                                            </td>
                                            <td name="td_amount_total" class="text-end">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <br/>
                        <p>
                            <strong style="text-decoration: underline;">En toutes lettres :</strong>
                            <br/>
                            <span t-field="doc.amount_text"/>
                            Toutes Taxes Comprises .
                        </p>
                        <br/>
                        <p>
                            <t t-if="doc.validity_date">
                                Valable jusqu'au :
                                <span t-field="doc.validity_date"/>
                            </t>
                            Ce devis fait office de bon de commande, merci de nous le retourner cacheté et
                            signé
                        </p>
                        <br/>
                        <p t-if="doc.note">
                            Note :
                            <span t-field="doc.note"/>
                        </p>

                        <!--                        <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">-->
                        <!--                            <div class="offset-8">-->
                        <!--                                <strong>Signature</strong>-->
                        <!--                            </div>-->
                        <!--                            <div class="offset-8">-->
                        <!--                                <img t-att-src="image_data_uri(doc.signature)"-->
                        <!--                                     style="max-height: 4cm; max-width: 8cm;"/>-->
                        <!--                            </div>-->
                        <!--                            <div class="offset-8 text-center">-->
                        <!--                                <p t-field="doc.signed_by"/>-->
                        <!--                            </div>-->
                        <!--                        </div>-->

                        <!--                        <div class="oe_structure"/>-->

                        <!--                        <p t-field="doc.note"/>-->
                        <!--                        <p t-if="doc.payment_term_id.note">-->
                        <!--                            <span t-field="doc.payment_term_id.note"/>-->
                        <!--                        </p>-->
                        <!--                        <p id="fiscal_position_remark"-->
                        <!--                           t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">-->
                        <!--                            <strong>Fiscal Position Remark:</strong>-->
                        <!--                            <span t-field="doc.fiscal_position_id.sudo().note"/>-->
                        <!--                        </p>-->

                    </div>
                </t>

            </xpath>

        </template>

        <report
                id="sale.action_report_saleorder"
                string="Quotation / Order"
                model="sale.order"
                report_type="qweb-pdf"
                file="sale.report_saleorder"
                name="sale.report_saleorder"
                print_report_name="'Devis - %s' % (object.name)"
        />

        <!--                print_report_name="(object.state in ('draft', 'sent') and 'Devis - %s' % (object.name)) or 'Commande - %s' % (object.name)"-->

        <record id="sale.action_report_saleorder" model="ir.actions.report">
            <field name="paperformat_id" ref="ep_base.report_qweb_paperformat"/>
        </record>

    </data>

</odoo>