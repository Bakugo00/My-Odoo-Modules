<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <data>

        <record id="mrp_unbuild_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.unbuild.form.inherit</field>
            <field name="model">mrp.unbuild</field>
            <field name="inherit_id" ref="mrp.mrp_unbuild_form_view"/>
            <field name="arch" type="xml">

               <!-- Add options to fields  -->

                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open':True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='bom_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open':True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='location_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open':True}
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='location_dest_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open':True}
                    </attribute>
                </xpath>

                 <xpath expr="//field[@name='lot_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open':True}
                    </attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>