<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="dimension_form" model="ir.ui.view">
            <field name="name">dimension.form</field>
            <field name="model">dimension</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="height" string="Longueur(cm)"/>
                                <field name="width" string="Largeur(cm)" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="dimension_list" model="ir.ui.view">
            <field name="name">Dimension</field>
            <field name="model">dimension</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="height"/>
                    <field name="width"/>
                </tree>
            </field>
        </record>

        <record id="dimension_action" model="ir.actions.act_window">
            <field name="name">Dimension</field>
            <field name="res_model">dimension</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_dimension"
                action="dimension_action"
                parent="sale.menu_sale_config"
                groups="sales_team.group_sale_salesman"
                sequence="3"
        />

    </data>
</odoo>