<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ===================Catégories Clients=================== -->
        <record id="client_category_form" model="ir.ui.view">
            <field name="name">client.category.form</field>
            <field name="model">client.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="remise" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="client_category_list" model="ir.ui.view">
            <field name="name">client.category.tree</field>
            <field name="model">client.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="remise"/>
                </tree>
            </field>
        </record>

        <record id="client_category_action" model="ir.actions.act_window">
            <field name="name">Remise Par Catégorie Client</field>
            <field name="res_model">client.category</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_client_category"
                action="client_category_action"
                parent="sale.menu_sale_config"
                groups="sales_team.group_sale_salesman"
                sequence="3"
        />
        <!-- =================== Remise=================== -->
        <record id="remise_form" model="ir.ui.view">
            <field name="name">remise.form</field>
            <field name="model">remise</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            
                            <group>
                                <field name="remise"/>
                                <field name="date_debut" />
                                <field name="date_fin" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page name="Produits" string="Produits">
                                <field name="product_ids" widget="many2many" options="{'not_delete': True}">
                                    <kanban quick_create="false" create="true" delete="true">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click" style="max-width: 200px">
                                                    <div class="o_kanban_record_top">
                                                        <img t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)" class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0" alt="Avatar"/>
                                                        <div class="o_kanban_record_headings ml8">
                                                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="remise_list" model="ir.ui.view">
            <field name="name">remise.tree</field>
            <field name="model">remise</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="remise"/>
                    <field name="date_debut" />
                    <field name="date_fin" />
                </tree>
            </field>
        </record>

        <record id="remise_action" model="ir.actions.act_window">
            <field name="name">Promotions(Remise)</field>
            <field name="res_model">remise</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_remise"
                action="remise_action"
                parent="sale.menu_sale_config"
                groups="sales_team.group_sale_salesman"
                sequence="3"
        />
    </data>
</odoo>