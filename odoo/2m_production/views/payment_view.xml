<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="payment_form_view_inherit">
        <field name="name">payment.form.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="before">
                <field name="sale_order_ids" widget="many2many_tags"/>
            </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="account_move_form_view_inherit">
            <field name="name">account.move.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/control" position="inside">
                    <create name="add_composed_product_control" string="Ajouter un Article composÃ©" context="{'default_display_type': 'line_composed_product'}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                    <field name="new_quantity" />
                    <field name="new_price_unit" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="before">
                    <field name="new_quantity" invisible="1"/>
                    <field name="new_price_unit" invisible="1"/>
                </xpath>
                <xpath expr="//page[@id='aml_tab']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/control/create[@name='add_section_control']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/control/create[@name='add_note_control']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>