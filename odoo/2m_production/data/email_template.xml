<odoo>
    <data noupdate="0">
        <!--Email template -->
        <record id="email_to_customer_in_workorder" model="mail.template">
            <field name="name">Exemple d'email au client</field>
            <field name="model_id" ref="mrp.model_mrp_workorder"/>
            <field name="email_from">${(object.company_id.email |safe}</field>
            <field name="email_to">${object.production_id.partner_id.email}</field>
            <field name="subject">A propos du devis ${object.production_id.sale_id.name or 'n/a' }</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Bonjour,</p>
                <br/>
                <br/>
                <p>Cordialement</p>
                 ]]>
            </field>
        </record>
    </data>

    <!--                 <p>Le contrat ${object.name} va expir√© dans ${object.nbr_day_email} jours .</p>-->


</odoo>