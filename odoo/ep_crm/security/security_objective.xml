<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Ctegory Objective for CRM module access groups-->
        <record model="ir.module.category" id="objective_category">
            <field name="name">Objective</field>
            <field name="description">Objective Application</field>
            <field name="parent_id" ref="crm_parent_category"/>
        </record>
<!-- Groups Objective -->
 <!--Group : collaborateur-->
        <record id="group_objective_collaborateur" model="res.groups">
            <field name="name">Collaborateur</field>
            <field name="category_id" ref="objective_category"/>
        </record>
<!--Group : Manager n+1 -->
        <record id="group_objective_manager_n" model="res.groups">
            <field name="name">Manager n+1</field>
            <field name="category_id" ref="objective_category"/>
            <field name="implied_ids" eval="[(4, ref('group_objective_collaborateur'))]"/>

        </record>
<!--Group : Direction/Manager IT -->
        <record id="group_objective_direction" model="res.groups">
            <field name="name">Direction/Manager IT</field>
            <field name="category_id" ref="objective_category"/>
            <field name="implied_ids" eval="[(4, ref('group_objective_manager_n'))]"/>
        </record>
<!--Rules-->
<!--Rule : group collaborateur -->
        <record id="objective_rule_collaborateur" model="ir.rule">
            <field name="name">objective.rule.collaborateur</field>
            <field name="model_id" ref="model_objective"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_objective_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
<!--Rule : group manager n+1 -->
        <record id="objective_rule_manager_n" model="ir.rule">
            <field name="name">objective.rule.manager.n</field>
            <field name="model_id" ref="model_objective"/>
            <field name="domain_force">[('user_id.employee_ids.parent_id','child_of',user.employee_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_objective_manager_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
<!--Rule : Direction/manager it -->
        <record id="objective_rule_direction" model="ir.rule">
            <field name="name">objective.rule.direction</field>
            <field name="model_id" ref="model_objective"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_objective_direction'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>