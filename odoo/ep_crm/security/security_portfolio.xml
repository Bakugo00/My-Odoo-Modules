<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
    <!--Ctegory for Portfolio module access groups-->
        <record model="ir.module.category" id="portfolio_parent_category">
            <field name="name">Portefeuilles</field>
            <field name="description">Protfolio parent Application</field>
        </record>
        <record model="ir.module.category" id="portfolio_category">
            <field name="name">Portefeuilles</field>
            <field name="description">Portfolio Application</field>
            <field name="parent_id" ref="portfolio_parent_category"/>
        </record>
    <!-- Groups portfolio -->
    <!--Group : collaborateur-->
        <record id="group_portfolio_collaborateur" model="res.groups">
            <field name="name">Collaborateur</field>
            <field name="category_id" ref="portfolio_category"/>
        </record>
    <!--Group : Manager N+1-->
        <record id="group_portfolio_n" model="res.groups">
            <field name="name">Manager N+1</field>
            <field name="category_id" ref="portfolio_category"/>
            <field name="implied_ids" eval="[(4, ref('group_portfolio_collaborateur'))]"/>
        </record>
        <record id="group_portfolio_manager_it" model="res.groups">
            <field name="name">Manager IT/Direction</field>
            <field name="category_id" ref="portfolio_category"/>
            <field name="implied_ids" eval="[(4, ref('group_portfolio_n'))]"/>
        </record>
<!--Rules-->
<!--Rule : group manager n+1 -->
        <record id="portfolio_rule_manager_n" model="ir.rule">
            <field name="name">portfolio.rule.manager.n</field>
            <field name="model_id" ref="model_portfolio"/>
            <field name="domain_force">['|',('owner_id','=',user.id),('user_ids','in',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_portfolio_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    <!--Rule : group collaborateur-->
        <record id="portfolio_rule_personal" model="ir.rule">
            <field name="name">portfolio.rule.personal</field>
            <field name="domain_force">['|',('owner_id','=',user.id),('user_ids','in',user.id)]</field>
            <field name="model_id" ref="model_portfolio"/>
            <field name="groups" eval="[(4,ref('group_portfolio_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    <!--Rule : group Direction -->
        <record id="portfolio_rule_all" model="ir.rule">
            <field name="name">portfolio.rule.manager.it</field>
            <field name="model_id" ref="model_portfolio"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_portfolio_manager_it'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>