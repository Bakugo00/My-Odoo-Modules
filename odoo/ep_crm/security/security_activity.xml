<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
    <!--Ctegory for Activitées module access groups-->
        <record model="ir.module.category" id="mail_message_parent_category">
            <field name="name">Activitées</field>
            <field name="description">Activitées Terminés parent Application</field>
        </record>
        
        <record model="ir.module.category" id="mail_message_category">
            <field name="name">Activitées</field>
            <field name="description">Activitées /  Activitées Terminées </field>
            <field name="parent_id" ref="mail_message_parent_category"/>
        </record>
    <!-- Groups Activités Terminés -->
    <!--Group : collaborateur-->

        <record id="group_mail_message_collaborateur" model="res.groups">
            <field name="name">Collaborateur</field>
            <field name="category_id" ref="mail_message_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    <!--Group : Manager N+1-->
        <record id="group_mail_message_n" model="res.groups">
            <field name="name">Manager N+1</field>
            <field name="category_id" ref="mail_message_category"/>
            <field name="implied_ids" eval="[(4, ref('group_mail_message_collaborateur'))]"/>
        </record>
        <record id="group_mail_message_manager_it" model="res.groups">
            <field name="name">Manager IT/Direction</field>
            <field name="category_id" ref="mail_message_category"/>
            <field name="implied_ids" eval="[(4, ref('group_mail_message_n'))]"/>
        </record>
        
<!--Rules-->
    <!-- Mail Message  -->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', 'in', ['hr_recruitment']), ('name', 'in', ['mail_message_interviewer_rule'])]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>
        <record id="hr_recruitment.mail_message_interviewer_rule" model="ir.rule">
            <field name="active" eval="False"/>
        </record>
    <!--Rule : group collaborateur-->
        <record id="mail_message_collaborateur_rule" model="ir.rule">
            <field name="name">mail.message.collaborateur.rule</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('subtype_id','!=', 3),(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_mail_message_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="mail_message_rule_personal" model="ir.rule">
            <field name="name">mail_message.rule.personal</field>
            <field name="domain_force">[('subtype_id','=', 3),('user_id','=',user.id)]</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="groups" eval="[(4,ref('group_mail_message_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <!--Rule : group manager n+1 -->
        <record id="mail_message_rule_manager_n" model="ir.rule">
            <field name="name">mail_message.rule.manager.n</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id.employee_ids.parent_id','child_of',user.employee_ids.ids),('subtype_id','=', 3)]</field>
            <field name="groups" eval="[(4,ref('group_mail_message_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    <!--Rule : group Direction -->
        <record id="mail_message_rule_all" model="ir.rule">
            <field name="name">mail_message.rule.manager.it</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <!-- <field name="domain_force">[(1,'=',1),('subtype_id','=', 3)]</field> -->
            <field name="domain_force">[('subtype_id','=', 3)]</field>
            <field name="groups" eval="[(4,ref('group_mail_message_manager_it'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Mail Activity  -->
    <!--Rule : group collaborateur-->
        <record id="mail_activity_rule_personal" model="ir.rule">
            <field name="name">mail_activity.rule.personal</field>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="groups" eval="[(4,ref('group_mail_message_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <!--Rule : group manager n+1 -->
        <record id="mail_activity_rule_manager_n" model="ir.rule">
            <field name="name">mail_activity.rule.manager.n</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id.employee_ids.parent_id','child_of',user.employee_ids.ids)]</field>
            <field name="groups" eval="[(4,ref('group_mail_message_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    <!--Rule : group Direction -->
        <record id="mail_activity_rule_all" model="ir.rule">
            <field name="name">mail_activity.rule.manager.it</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_mail_message_manager_it'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="mail_message_report_rule_personal" model="ir.rule">
            <field name="name">mail_message.rule.personal</field>
            <field name="domain_force">[('subtype_id','=', 3),('user_id','=',user.id)]</field>
            <field name="model_id" ref="model_contact_mail_message_report"/>
            <field name="groups" eval="[(4,ref('group_mail_message_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <!--Rule : group manager n+1 -->
        <record id="mail_message_report_rule_manager_n" model="ir.rule">
            <field name="name">mail_message_report.rule.manager.n</field>
            <field name="model_id" ref="model_contact_mail_message_report"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id.employee_ids.parent_id','child_of',user.employee_ids.ids),('subtype_id','=', 3)]</field>
            <field name="groups" eval="[(4,ref('group_mail_message_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    <!--Rule : group Direction -->
        <record id="mail_message_report_rule_all" model="ir.rule">
            <field name="name">mail_message_report.rule.manager.it</field>
            <field name="model_id" ref="model_contact_mail_message_report"/>
            <!-- <field name="domain_force">[(1,'=',1),('subtype_id','=', 3)]</field> -->
            <field name="domain_force">[('subtype_id','=', 3)]</field>
            <field name="groups" eval="[(4,ref('group_mail_message_manager_it'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>