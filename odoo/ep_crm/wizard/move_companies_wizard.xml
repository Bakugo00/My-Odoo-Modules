<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="move_companies_wizard" model="ir.ui.view">
        <field name="name">Déplacer les entreprises</field>
        <field name="model">move.companies.wizard</field>
        <field name="arch" type="xml">
            <form string="Déplacer les entreprises">
                <group>
                    <!--                    <group>-->
                    <!--                        <field name="partner_ids" widget="many2many_checkboxes" required="1"/>-->
                    <!--                    </group>-->
                    <!--                    <group>-->
                    <field name="target_portfolio_id" domain="[('id', '!=', active_id)]"
                           options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"
                           required="1"/>
                    <!--                    </group>-->
                </group>
                <notebook>
                    <page string="Entreprises">
                        <field name="partner_ids"
                               options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"
                        >
                            <tree>
                                <field name="name"/>
                                <field name="street"/>
                                <field name="city"/>
                                <field name="website"/>
                                <field name="turnover"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button name="move_companies" string="Valider" type="object" class="btn-primary"/>
                    <button string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_move_companies" model="ir.actions.act_window">
        <field name="name">Déplacer les entreprises</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">move.companies.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>