<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="contact_mail_message_report_view_graph" model="ir.ui.view">
            <field name="name">contact.mail.message.report.graph</field>
            <field name="model">contact.mail.message.report</field>
            <field name="arch" type="xml">
                <graph string="Graphe des Activités Terminés" sample="1">
                <field name="mail_activity_type_id"/>
                <field name="user_id" string="Utilisateur"/>
            </graph>
            </field>
        </record>

        <record id="contact_mail_message_report_view_pivot" model="ir.ui.view">
            <field name="name">contact.mail.message.report.pivot</field>
            <field name="model">contact.mail.message.report</field>
            <field name="arch" type="xml">
                <pivot string="Analyse Activités Terminés" sample="1">
                    <field name="mail_activity_type_id" type="col"/>
                    <field name="user_id" string="Utilisateur" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="contact_mail_message_report_view_tree" model="ir.ui.view">
            <field name="name">contact.mail.message.report.tree</field>
            <field name="model">contact.mail.message.report</field>
            <field name="arch" type="xml">
                <tree>
                <field name="record_name" string="Nom du document"/>
                <field name="contact_id"/>
                <field name="mail_activity_type_id" string="Type d'activité"/>
                <field name="summary"/>
                <field name="date_deadline" string="date d'échéance"/>
                <field name="user_id" string="Utilisateur"/>
                <field name="result_categ_id"/>
                <field name="result_id"/>
                <field name="date" string="Marqué comme fait le"/>

                </tree>
            </field>
        </record>

        <record id="contact_mail_message_report_view_search" model="ir.ui.view">
            <field name="name">contact.mail.message.report.search</field>
            <field name="model">contact.mail.message.report</field>
            <field name="arch" type="xml">
                <search string="Activities Analysis">
                    <field name="mail_activity_type_id" string="Activity Type"/>
                    <field name="contact_id" string="Contact"/>
                    <field name="record_name" string="Nom du Document"/>
                    <field name="summary" string="Summary"/>
                    <field name="user_id" string="Attribué à"/>
                    <field name="result_id" string="Résultat"/>
                    <field name="date" string="Marqué comme fait le" />
                    <field name="result_categ_id" string="Catégorie de résultat"/>
                    <separator/>
                    <filter name="filter_date" date="date_deadline" default_period="this_month"/>
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter string="Activités" name="group_by_activity_type" context="{'group_by': 'mail_activity_type_id'}"/>
                        <filter string="Contact" name="group_by_contact" context="{'group_by': 'contact_id'}"/>
                        <filter string="Attribué à" name="group_by_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Nom du Document" name="group_by_document_name" context="{'group_by': 'record_name'}"/>
                        <filter string="Catégorie de résultat" name="group_by_categorie_de_resultat" context="{'group_by': 'result_categ_id'}"/>
                        <filter string="Résultat" name="group_by_resultat" context="{'group_by': 'result_id'}"/>
                        <filter string="date d'échéance" name="group_by_date_déchéance" context="{'group_by': 'date_deadline:month'}"/>
                    </group>
                </search>
            </field>
        </record>

       <record id="contact_mail_message_report_action" model="ir.actions.act_window">
           <field name="name">Activités Terminés Contact</field>
           <field name="res_model">contact.mail.message.report</field>
           <field name="view_mode">pivot,graph,tree</field>
            <field name="domain">[('subtype_id','=', 3)]</field>
            <field name="context">{'search_default_filter_date': True}</field>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p><p>
                    Start scheduling activities
                </p>
            </field>
       </record>



           <menuitem
                id="contact_mail_message_report_menu"
                action="contact_mail_message_report_action"
                parent="parent_activity_report_menu"
                sequence="7"
        />



        </data>
</odoo>
