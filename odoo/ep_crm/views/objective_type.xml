<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="objective_type_form" model="ir.ui.view">
            <field name="name">objective.type.form</field>
            <field name="model">objective.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" optional="show" required="1"/>
                            <field name="active" invisible="1"/>
                            <field name="type" optional="show" required="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="objective_type_list" model="ir.ui.view">
            <field name="name">Type des objectifs</field>
            <field name="model">objective.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
<!--                    <field name="objective_ids" widget="many2many_tags"/>-->
                </tree>
            </field>
        </record>

        <record id="objective_type_action" model="ir.actions.act_window">
            <field name="name">Type des objectifs</field>
            <field name="res_model">objective.type</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="objective_type_menu"
                action="objective_type_action"
                parent="crm.crm_menu_config"
                groups="sales_team.group_sale_salesman"
                sequence="3"
        />

    </data>
</odoo>