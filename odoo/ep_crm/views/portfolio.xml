<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="portfolio_form" model="ir.ui.view">
            <field name="name">portfolio.form</field>
            <field name="model">portfolio</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Déplacer les entreprises" name="move_companies"
                            type="object"
                            class="oe_highlight" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_get_partners" class="oe_stat_button" type="object"
                                icon="fa-handshake-o">
                                <div class="o_stat_info">
                                    <field name="partners_count" readonly="1" />
                                    <span class="o_stat_text">Societés</span>
                                </div>
                            </button>
                            <button name="action_get_turnover" class="oe_stat_button" type="object"
                                icon="fa-usd">
                                <div class="o_stat_info">
                                    <field name="turnover" readonly="1" />
                                    <span class="o_stat_text">CA</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="active" invisible="1" />
                                <field name="categ_id"
                                    options="{'no_open': True,'no_quick_create':True,'no_create_edit': True,'no_create': True}" />
                                <!--                                <field name="is_approved_user" invisible="1"/>-->
                                <field name="logged_user_id" invisible="1" />
                            </group>
                            <group>
                                <field name="owner_id"
                                    options="{'no_open': True,'no_quick_create':True,'no_create_edit': True,'no_create': True}" />
                                <field name="user_ids" widget="many2many_tags"
                                    options="{'no_open': True,'no_quick_create':True,'no_create_edit': True,'no_create': True}" />
                                <field name="company_id" invisible="1" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="portfolio_list" model="ir.ui.view">
            <field name="name">Portefeuilles</field>
            <field name="model">portfolio</field>
            <field name="arch" type="xml">
                <!--                <tree decoration-muted="partners_count == 0">-->
                <tree>
                    <field name="name" />
                    <field name="owner_id" />
                    <field name="partners_count" />
                    <field name="goal" />
                    <field name="turnover" />
                    <!--                    <field name="is_approved_user" invisible="1"/>-->
                </tree>
            </field>
        </record>

        <record id="portfolio_activity" model="ir.ui.view">
            <field name="name">portfolio.activity</field>
            <field name="model">portfolio</field>
            <field name="arch" type="xml">
                <activity string="Portfolio">
                    <templates>
                        <div t-name="activity-box">
                            <div>
                                <field name="name" display="full" />
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>

        <record id="portfolio_action" model="ir.actions.act_window">
            <field name="name">Portefeuilles</field>
            <field name="res_model">portfolio</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <!--            <field name="domain">[('is_approved_user', '=', 1) ]</field>-->
            <!--            <field name="domain">[ ('user_ids','=',uid)]</field>-->
            <field name="domain" />
        </record>

        <record model="ir.actions.server" id="print_instance">
            <field name="name">Res Partner Server Action</field>
            <field name="model_id" ref="model_portfolio" />
            <field name="code">
                if len(object.partners_count) != 0:
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": object._name,
                "res_id": object.id,
                }
            </field>
        </record>

        <menuitem
            id="menu_portfolio"
            action="portfolio_action"
            parent="crm.crm_menu_sales"
            groups="sales_team.group_sale_salesman"
            sequence="5"
        />


