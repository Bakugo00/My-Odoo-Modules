<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="crm_team_form_inherit" model="ir.ui.view">
            <field name="name">crm.team.form.inherit</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

                 <xpath expr="//field[@name='member_ids']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit': True,'no_quick_create': True,
                        'no_open': True}
                    </attribute>
                </xpath>

            </field>
        </record>


    </data>
</odoo>