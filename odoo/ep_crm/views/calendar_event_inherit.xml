<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="calendar_event_form_inherit_custom" model="ir.ui.view">
            <field name="name">calendar.event.form.inherit.custom</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="ep_base.calendar_event_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ids']" position="attributes">
                    <attribute name="context">{'show_portoflio_contacts': True,'force_email':True}</attribute>
                </xpath>
            </field>
        </record>


    </data>
</odoo>