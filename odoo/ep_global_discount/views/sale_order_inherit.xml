<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='note']" position="before">
                    <group name="discount" colspan="1">
                        <field name="discount_type"/>
                        <field name="discount_rate"/>

                    </group>
                </xpath>
        
                <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                    <attribute name="attrs">{'invisible': [('amount_discount', '!=', 0)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_untaxed']" position="before">
                    <field name="amount_discount"/>
                    <field name="amount_untaxed" string="Montant HT(avec remise)" widget='monetary' options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('amount_discount', '=', 0)]}"/>
                </xpath>
            </field>

        </record>

    </data>
</odoo>