<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="contract_type_list_view">
            <field name="name">Liste des types de contrats</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
<!--                    <field name="type"/>-->
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_type_form_view">
            <field name="name">Type de Contrat</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="active" invisible="1"/>
                            </group>
<!--                            <group>-->
<!--                                <field name="type" required="1"/>-->
<!--                                <field name="amount" attrs="{'invisible': [('type', '!=', 'commercial')]}"/>-->
<!--                            </group>-->
                        </group>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="contract_type_action" model="ir.actions.act_window">
            <field name="name">Type de contrat</field>
            <field name="res_model">contract.type</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
        </record>


    </data>

</odoo>