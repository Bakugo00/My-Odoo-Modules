<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="supplier_contract_list_view">
            <field name="name">Liste des contrats fournisseurs</field>
            <field name="model">supplier.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" optional="show"/>
                    <field name="partner_id" optional="show"/>
<!--                    <field name="duration"/>-->
                    <field name="type" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="supplier_contract_form_view">
            <field name="name">Contrat fournisseur</field>
            <field name="model">supplier.contract</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_start" type="object" string="DÃ©marrer" states="draft" class="oe_highlight"/>
                        <button name="button_done" type="object" string="Cloturer" states="progress" class="oe_highlight"/>
                        <button name="button_cancel" states="draft,progress" string="Annuler" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,progress,done" readonly="1"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                                <field name="active" invisible="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="partner_id" string="Fournisseur" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
<!--                                <field name="type_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>-->
                                <field name="type" required="1"/>
<!--                                <field name="amount" attrs="{'invisible': [('type', '!=', 'commercial')]}"/>-->
                            </group>
                            <group>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="object" required="1"/>
                            </group>
                        </group>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="supplier_contract_action" model="ir.actions.act_window">
            <field name="name">Contrat Fournisseur</field>
            <field name="res_model">supplier.contract</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>


    </data>

</odoo>