<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="contract_list_view">
            <field name="name">Liste des contrats clients</field>
            <field name="model">customer.contract</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" optional="show"/>
                    <field name="partner_id" optional="show"/>
                    <field name="type_id" optional="show"/>
                    <!--                    <field name="duration"/>-->
                    <field name="company_currency" invisible="1"/>
                    <field name="amount_untaxed" optional="show" widget="monetary"
                           options="{'currency_field': 'company_currency'}"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_form_view">
            <field name="name">Contrat Client</field>
            <field name="model">customer.contract</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sale_order" type="object" string="Céer Devis" states="progress"
                                class="oe_highlight"/>
                        <button name="button_start" type="object" string="Démarrer" states="draft"
                                class="oe_highlight"/>
                        <button name="button_done" type="object" string="Cloturer" states="progress"
                                class="oe_highlight"/>
                        <button name="button_cancel" states="draft,progress" string="Annuler" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,progress,done" readonly="1"/>
                    </header>
                    <sheet>
                        <!--                        icon="fa-list-alt"-->
                        <div class="oe_button_box" name="button_box">
                            <button name="action_sale_order" type="object"
                                    class="oe_stat_button" icon="fa-money"
                                    attrs="{'invisible': [('sale_order_count','=',0)]}">
                                <field string="Devis" name="sale_order_count" widget="statinfo"/>
                            </button>
                            <button name="preview_customer_contract" type="object" class="oe_stat_button"
                                    icon="fa-globe icon">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Aperçu</span>
                                    <span class="o_stat_text">Client</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <!--                            <label string="Numéro Contrat"/>-->
                            <h1>
                                <field name="name" readonly="1"/>
                                <field name="active" invisible="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="partner_id" required="1"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                <field name="type_id" required="1"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                <!--                                <field name="type" required="1"/>-->
                                <!--                                <field name="amount" attrs="{'invisible': [('type', '!=', 'commercial')]}"/>-->
                            </group>
                            <group>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="object" required="1"/>
                                <!--                                <field name="duration"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Lignes de contrats">

                                <field name="contract_line_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree,kanban"
                                       attrs="{'readonly': [('state', 'in', ('done','cancel'))]}">

                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                            <create name="add_section_control" string="Add a section"
                                            />
                                            <create name="add_note_control" string="Add a note"
                                            />
                                        </control>

                                        <field name="product_id" optional="show"
                                               options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"/>
                                        <field name="description" optional="show"/>
                                        <field name="product_uom_qty" optional="show"/>
                                        <field name="company_currency" invisible="1"/>
                                        <field name="price_unit" optional="show" widget="monetary"
                                               options="{'currency_field': 'company_currency'}"/>
                                        <field name="taxes_ids" widget="many2many_tags" options="{'no_create': True}"
                                               optional="show"
                                               context="{'search_view_ref': 'account.account_tax_view_search'}"/>

                                        <!--                                        <field name="tax_id" optional="show"  options="{'no_create': True, 'no_create_edit': True,'no_quick_create': True, 'no_open': True}"/>-->
                                        <field name="price_subtotal" optional="show" widget="monetary"
                                               options="{'currency_field': 'company_currency'}"/>
                                    </tree>
                                    <form name="Lignes de contrats" string="Lignes de contrats">
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="description"/>
                                                <field name="product_uom_qty"/>
                                            </group>
                                            <group>
                                                <field name="price_unit"/>
                                                <field name="taxes_ids" widget="many2many_tags"/>
                                                <field name="price_subtotal" widget="monetary"
                                                       options="{'currency_field': 'company_currency'}"/>
                                            </group>
                                        </group>

                                    </form>
                                </field>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group colspan="4">
                                        <field name="note" nolabel="1" placeholder="Termes et conditions..."/>
                                    </group>
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="company_currency" invisible="1"/>
                                        <field name="amount_untaxed" widget="monetary"
                                               options="{'currency_field': 'company_currency'}"/>
                                        <field name="amount_tax" widget="monetary"
                                               options="{'currency_field': 'company_currency'}"/>
                                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                            <label for="amount_total" widget="monetary"
                                                   options="{'currency_field': 'company_currency'}"/>
                                        </div>
                                        <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator"
                                               widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>
                            </page>
                            <page name="document" string="Documents">
                                <field name="doc_ids" nolabel="1" string="Documents">
                                    <tree create="1" delete="1" edit="1" editable="bottom">
                                        <field name="ref_document" optional="show"/>
                                        <field name="name" optional="show"/>
                                        <field name="file_name" invisible="1"/>
                                        <field name="document" optional="show" filename="file_name" widget="binary"/>
                                    </tree>
                                    <form name="documents" string="Document">
                                        <group>
                                            <group>
                                                <field name="ref_document"/>
                                                <field name="name"/>
                                            </group>
                                            <group>
                                                <field name="file_name" invisible="1"/>
                                                <field name="document" string="Téléchargement de la Piéce jointe"
                                                       optional="show" filename="file_name" widget="binary"/>
                                            </group>
                                        </group>

                                    </form>
                                </field>
                            </page>

                            <page name="rappel" string="Rappels">
                                <form>
                                    <group>
                                        <group>
                                            <field name="customer_email"/>
                                            <field name="vendor_notification"/>
                                            <button name="send_email" type="object"
                                                    class="oe_highlight" string="Envoyer E-mail direct"
                                                    attrs="{'invisible': [('customer_email','=', False)]}"/>
                                            <button name="send_email_with_wizard" type="object"
                                                    class="oe_highlight" string="Envoyer E-mail avec modif"
                                                    attrs="{'invisible': [('customer_email','=', False)]}"/>
                                            <button name="display_notification" type="object"
                                                    class="oe_highlight" string="Notification"
                                                    attrs="{'invisible': [('vendor_notification','=',False)]}"/>
                                        </group>
                                        <group>
                                            <field name="nbr_day_email"
                                                   attrs="{'invisible': [('customer_email','=', False)] , 'required': [('customer_email','=', True)]}"/>
                                            <field name="day_send_email" readonly="1"
                                                   attrs="{'invisible': [('customer_email','=', False)]}"/>
                                            <field name="nbr_day_notif"
                                                   attrs="{'invisible': [('vendor_notification','=',False)] , 'required': [('vendor_notification','=', True)]}"/>
                                            <field name="day_display_notif" readonly="1"
                                                   attrs="{'invisible': [('vendor_notification','=',False)]}"/>
                                        </group>
                                    </group>
                                </form>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="customer_contract_kanban_view" model="ir.ui.view">
            <field name="name">customer.contract.kanban.view</field>
            <field name="model">customer.contract</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <!--                on_create="quick_create" quick_create_view="contract.contract_form_view"-->
                <kanban default_group_by="state" class="o_kanban_small_column o_opportunity_kanban"
                        archivable="false" sample="1">
                    <field name="state" options='{"group_by_tooltip": {"requirements": "Description"}}'/>
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="amount_untaxed"/>
                    <field name="activity_date_deadline"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="activity_state"/>
                    <field name="activity_ids"/>
                    <field name="company_currency" invisible="1"/>
                    <progressbar field="activity_state"
                                 colors='{"planned": "success", "today": "warning", "overdue": "danger"}'
                                 sum_field="amount_untaxed"
                                 widget="monetary" options="{'currency_field': 'company_currency'}"
                    />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown"
                                       data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <a role="menuitem" type="edit" class="dropdown-item">Editer</a>
                                        </t>
                                        <t t-if="widget.deletable">
                                            <a role="menuitem" type="delete" class="dropdown-item">Supprimer</a>
                                        </t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <!--                                    <div class="o_kanban_record_subtitle">-->
                                    <!--                                        <t t-if="record.expected_revenue.raw_value">-->
                                    <!--                                        <field name="partner_id"/>-->
                                    <!--                                            <span t-if="record.recurring_revenue and record.recurring_revenue.raw_value"> + </span>-->
                                    <!--                                        </t>-->
                                    <!--                                        <t t-if="record.recurring_revenue and record.recurring_revenue.raw_value">-->
                                    <!--                                            <field name="recurring_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>-->
                                    <!--                                            <field name="recurring_plan"/>-->
                                    <!--                                        </t>-->
                                    <!--                                    </div>-->
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="partner_id"/>
                                        </div>

                                        <div class="oe_kanban_bottom_right">
                                            <field name="amount_untaxed" widget="monetary"
                                                   options="{'currency_field': 'company_currency'}"/>
                                        </div>
                                        <!--                                        <span t-if="record.amount_untaxed.value" t-esc="record.amount_untaxed.value"/>-->
                                    </div>
                                    <!--                                    <div>-->
                                    <!--                                        <span t-if="record.partner_id.value" t-esc="record.partner_id.value"/>-->
                                    <!--                                    </div>-->
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority" groups="base.group_user"/>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="customer_contract_action" model="ir.actions.act_window">
            <field name="name">Contrat Client</field>
            <field name="res_model">customer.contract</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
        </record>


    </data>
</odoo>