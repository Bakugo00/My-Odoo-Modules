<odoo>
    <data noupdate="0">
        <!--Email template -->
        <record id="email_expiration_contrat" model="mail.template">
            <field name="name">Exemple d'email d'expiration de contrat</field>
            <field name="model_id" ref="ep_contrat.model_customer_contract"/>
            <field name="email_from">${(object.company_id.email |safe}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Expiration du contrat ${object.name or 'n/a' }</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Bonjour,</p>
                <br/>
                 <p>Le contrat ${object.name} va expir√© dans ${object.nbr_day_email} jours .</p>
                <br/>
                <p>Cordialement</p>
                 ]]>
            </field>
        </record>
    </data>

</odoo>