<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="calendar_view_inherit" model="ir.ui.view">
            <field name="name">calendar.event.calendar</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="categ_ids" widget="many2many_tags" write_model="calendar.categories" write_field="categ_id"/>
                </xpath>
            </field>
        </record>
        <menuitem
                id="mail_menu_calendar_config"
                name="Configuration"
                parent="calendar.mail_menu_calendar"
                groups="base.group_user"
                sequence="3"
        />
        <menuitem
            id="menu_calendar_event_type"
            parent="ep_base.mail_menu_calendar_config"
            action="calendar.action_calendar_event_type"
            groups="base.group_user"
        />
    </data>
</odoo>