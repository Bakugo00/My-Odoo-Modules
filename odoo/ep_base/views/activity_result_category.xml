<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="activity_result_category_form" model="ir.ui.view">
            <field name="name">activity.result.category.form</field>
            <field name="model">activity.result.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active" invisible="1"/>
                            <field name="type_ids" required="1" widget="many2many_tags" options="{'no_open': True,'no_quick_create':True,'no_create_edit': True,'no_create': True}"/>
                            <field name="result_ids" widget="many2many_tags" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="activity_result_category_list" model="ir.ui.view">
            <field name="name">Catégories résultats d'activités</field>
            <field name="model">activity.result.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_ids" widget="many2many_tags"/>
                    <field name="result_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="activity_result_category_action" model="ir.actions.act_window">
            <field name="name">Catégories résultats d'activités</field>
            <field name="res_model">activity.result.category</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_activity_category_result"
                action="activity_result_category_action"
                parent="mail.mail_menu_technical"
                sequence="12"
        />

    </data>
</odoo>