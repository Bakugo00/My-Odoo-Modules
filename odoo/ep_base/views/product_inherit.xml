    <record model="ir.ui.view" id="product_variant_easy_edit_view_inherit_2">
        <field name="name">product_variant_easy_edit_view_2</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='type']" position="before">
                <field name="confirmed_type"/>
            </xpath>

        </field>
    </record>


    <record model="ir.ui.view" id="product_template_form_view_inherit_2">
        <field name="name">product_template_form_view_inherit_2</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- <xpath expr="//field[@name='type']" position="before">
                <field name="confirmed_type"/>
            </xpath> -->
            <xpath expr="//header//button[@name='action_open_label_layout']" position="before">
                <button name="action_confirm" id="action_confirm" 
                        string="Confirmer" class="btn-primary" type="object" context="{'validate_analytic': True}"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}" groups="sales_team.group_sale_salesman_all_leads"/>
                <button name="action_cancel" id="action_cancel" 
                        string="Annuler" class="btn-primary" type="object" context="{'validate_analytic': True}"
                        attrs="{'invisible': [('state', 'not in', ['confirmed'])]}" groups="sales_team.group_sale_salesman_all_leads"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
            </xpath> 
        </field>
    </record>


    <record id="product_template_search_view_inherit" model="ir.ui.view">
        <field name="name">product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">

            <xpath expr="//filter[@name='services']" position="before">

                <filter string="Confirmés" name="confirmed_product"
                        domain="[('confirmed_type', '=', 'confirmed')]"/>

                <filter string="Non-confirmés" name="not_confirmed_product"
                        domain="[('confirmed_type', '=', 'not-confirmed')]"/>

                <separator/>

            </xpath>

        </field>
    </record>


</odoo>
