<odoo>
    <data noupdate="0">   
        <!--Ctegory Calendar-->
        <record model="ir.module.category" id="calendar_parent_category">
            <field name="name">Calendrier</field>
            <field name="description">Calendar parent Application</field>
        </record>
        <record model="ir.module.category" id="calendar_category">
            <field name="name">Calendrier</field>
            <field name="description">Calendar Application</field>
            <field name="parent_id" ref="calendar_parent_category"/>
        </record>
<!-- Groups Calendar -->
    <!--Group : collaborateur-->
        <record id="group_calendar_collaborateur" model="res.groups">
            <field name="name">Collaborateur</field>
            <field name="category_id" ref="calendar_category"/>
        </record>
    <!--Group : Manager N+1-->
        <record id="group_calendar_manager_n" model="res.groups">
            <field name="name">Manager N+1</field>
            <field name="category_id" ref="calendar_category"/>
            <field name="implied_ids" eval="[(4, ref('group_calendar_collaborateur'))]"/>
        </record>

    <!--Group : Manager IT/Direction Group-->
        <record id="group_calendar_manager_it" model="res.groups">
            <field name="name">Manager IT/Direction</field>
            <field name="category_id" ref="calendar_category"/>
            <field name="implied_ids" eval="[(4, ref('group_calendar_manager_n'))]"/>
        </record>

        <record id="calendar.calendar_event_rule_employee" model="ir.rule">
            <field name="active" eval="False"/>
        </record>

        <!--Rule : group collaborateur-->
        <record id="calendar_rule_personal" model="ir.rule">
            <field name="name">calendar group collaborateur</field>
            <field name="domain_force">['|',('user_id','=',user.id),('partner_ids', 'in', user.partner_id.id)]</field>
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="groups" eval="[(4,ref('group_calendar_collaborateur'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <!--Rule : group manager n+1 -->
        <record id="calendar_rule_manager_n" model="ir.rule">
            <field name="name">calendar group manager n+1</field>
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="domain_force">['|','|',('user_id','=',user.id),('user_id.employee_ids.parent_id','child_of',user.employee_ids.ids),('partner_ids', 'in', user.partner_id.id)]</field>
            <field name="groups" eval="[(4,ref('group_calendar_manager_n'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        
    <!--Rule : group Direction -->
        <record id="calendar_rule_all" model="ir.rule">
            <field name="name">calendar group Direction </field>
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_calendar_manager_it'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>