<odoo>
    <record id="view_incubator_projects_form" model="ir.ui.view">
        <field name="name">incubator.projects.form</field>
        <field name="model">incubator.projects</field>
        <field name="arch" type="xml">
            <form string="Projects Incubateur">
                <sheet>
                    <group string="Ã‰tudiant">
                        <field name="email" />
                        <field name="first_name" />
                        <field name="last_name" />
                        <field name="birth_date" />
                        <field name="birth_place" />
                        <field name="residence_address" />
                        <field name="national_id" />
                        <field name="level" />
                        <field name="department" />
                        <field name="faculty" readonly="1" />
                    </group>
                    <group string="Projet">
                        <field name="project_title" />
                        <field name="project_idea_origin" />
                        <field name="project_team_members" />
                        <field name="project_description" />
                        <field name="project_needs" />
                        <field name="project_objectives" widget="many2many_tags" />
                        <field name="other_objective" />
                    </group>
                    <group string="Encadrement">
                        <field name="no_supervisor" />
                        <field name="main_supervisor_name"
                            attrs="{'invisible': [('no_supervisor', '=', True)]}" />
                        <field name="main_supervisor_email"
                            attrs="{'invisible': [('no_supervisor', '=', True)]}" />
                        <field name="co_supervisor_name"
                            attrs="{'invisible': [('no_supervisor', '=', True)]}" />
                        <field name="co_supervisor_email"
                            attrs="{'invisible': [('no_supervisor', '=', True)]}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_incubator_projects_tree" model="ir.ui.view">
        <field name="name">incubator.projects.tree</field>
        <field name="model">incubator.projects</field>
        <field name="arch" type="xml">
            <tree string="projects Incubateur">
                <field name="email" />
                <field name="first_name" />
                <field name="last_name" />
                <field name="project_title" />
                <field name="department" />
            </tree>
        </field>
    </record>
    <record id="view_incubator_dashboard_kanban" model="ir.ui.view">
        <field name="name">incubator.projects.kanban</field>
        <field name="model">incubator.projects</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div>
                                    <field name="project_title" />
                                </div>
                                <div class="o_row">
                                    <b>Departement :</b>
                                    <field name="department" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>